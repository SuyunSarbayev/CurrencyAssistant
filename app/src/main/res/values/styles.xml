<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProjectToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">15sp</item>
        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:fontFamily">@font/avenir_next_cyr_bold</item>
        <item name="fontFamily">@font/avenir_next_cyr_bold</item>
        <item name="font">@font/avenir_next_cyr_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
